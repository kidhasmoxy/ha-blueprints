{
  "examples": {
    "basic_motion_lighting": {
      "name": "Basic Motion Lighting",
      "description": "Simple motion-activated lighting for a single room",
      "config": {
        "name": "Living Room Motion Lights",
        "room": "living_room",
        "devices": [
          {
            "entity_id": "light.living_room_main",
            "type": "light",
            "activate": true,
            "turnOff": true,
            "settings": {
              "brightness": 255,
              "color_temp": 370
            }
          }
        ],
        "activationMeans": {
          "motion": {
            "enabled": true,
            "sensors": ["binary_sensor.living_room_motion"],
            "timeout": 300
          },
          "manual": {
            "enabled": true
          }
        },
        "turnOffMeans": {
          "motion": {
            "enabled": true,
            "sensors": ["binary_sensor.living_room_motion"],
            "timeout": 300
          },
          "manual": {
            "enabled": true
          }
        },
        "enabled": true
      }
    },
    "multi_sensor_kitchen": {
      "name": "Multi-Sensor Kitchen",
      "description": "Kitchen lighting with motion, illuminance, and door sensors",
      "config": {
        "name": "Smart Kitchen Lighting",
        "room": "kitchen",
        "devices": [
          {
            "entity_id": "light.kitchen_ceiling",
            "type": "light",
            "activate": true,
            "turnOff": true,
            "settings": {
              "brightness": 200,
              "color_temp": 400
            }
          },
          {
            "entity_id": "light.kitchen_under_cabinet",
            "type": "light",
            "activate": true,
            "turnOff": true,
            "settings": {
              "brightness": 150,
              "color_temp": 350
            }
          }
        ],
        "activationMeans": {
          "motion": {
            "enabled": true,
            "sensors": ["binary_sensor.kitchen_motion"],
            "timeout": 300
          },
          "illuminance": {
            "enabled": true,
            "sensors": ["sensor.kitchen_illuminance"],
            "threshold": 50,
            "operator": "below"
          },
          "contact": {
            "enabled": true,
            "sensors": ["binary_sensor.kitchen_door"],
            "state": "open"
          }
        },
        "turnOffMeans": {
          "motion": {
            "enabled": true,
            "sensors": ["binary_sensor.kitchen_motion"],
            "timeout": 600
          },
          "contact": {
            "enabled": true,
            "sensors": ["binary_sensor.kitchen_door"],
            "state": "closed"
          }
        },
        "turnOffOptions": {
          "waitForBothMotionAndContact": true,
          "alternativeMethods": "turnOff"
        },
        "enabled": true
      }
    },
